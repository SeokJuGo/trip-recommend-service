<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.enjoytrip.user.mapper.AuthMapper">

	<resultMap type="AuthRequestDto" id="authRequestDto">
		<result column="username" property="username"/>
		<result column="password" property="password"/>
	</resultMap>
	
	<resultMap type="UserEntity" id="userEntity" extends="authRequestDto">
		<result column="email" property="email"/>
		<result column="username" property="username"/>
		<result column="nickname" property="nickname"/>
		<result column="created_date" property="createdDate"/>
		<result column="updated_date" property="updatedDate"/>
		<result column="rold_id" property="roldId"/>
	</resultMap>
	
	<select id="login" parameterType="AuthRequestDto" resultMap="userEntity">
		SELECT ID,USERNAME,NICKNAME,ROLE_ID
		FROM user
		WHERE username=#{username} AND PASSWORD=#{password}
	</select>
	
	
	<select id="getRefreshToken" parameterType="AuthResponseDto"
		resultType="string">
		SELECT token
		FROM auth
		WHERE username=#{username}
	</select>

	<insert id="saveRefreshToken" parameterType="map">
		INSERT INTO
		auth
		VALUES(#{username}, #{token})
	</insert>

	<delete id="deleteRefreshToken" parameterType="map">
		DELETE FROM
		auth
		WHERE username = #{username}
	</delete>
</mapper>