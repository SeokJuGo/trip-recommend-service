<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.enjoytrip.user.mapper.AuthMapper">

	<resultMap type="AuthRequestDto" id="authRequestDto">
		<result column="id" property="id"/>
		<result column="password" property="password"/>
	</resultMap>
	
	<resultMap type="UserEntity" id="userEntity" extends="authRequestDto">
		<result column="email" property="email"/>
		<result column="username" property="username"/>
		<result column="nickname" property="nickname"/>
		<result column="created_date" property="createdDate"/>
		<result column="updated_date" property="updatedDate"/>
		<result column="rold_id" property="roldId"/>
	</resultMap>
	
	<select id="login" parameterType="AuthRequestDto" resultMap="userEntity">
		SELECT ID, NAME, ROLD_ID
		FROM user
		WHERE id=#{id} AND PASSWORD=#{password}
	</select>
	
	<delete id="delete" parameterType="AuthRequestDto">
		DELETE FROM USER WHERE ID = #{id}
	</delete>
	
	<select id="getRefreshToken" parameterType="string"
		resultType="string">
		SELECT token
		FROM user_token
		WHERE id = #{id}
	</select>

	<insert id="saveRefreshToken" parameterType="map">
		INSERT INTO
		user_token
		VALUES(#{id}, #{token})
	</insert>

	<delete id="deleteRefreshToken" parameterType="map">
		DELETE FROM
		user_token
		WHERE id = #{id}
	</delete>
</mapper>